<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnOpDivide"
        style="@style/Button"
        android:text="/" />

    <Button
        android:id="@+id/btnOpMultiply"
        style="@style/Button"
        android:text="*" />

    <Button
        android:id="@+id/btnOpMinus"
        style="@style/Button"
        android:text="-" />

    <Button
        android:id="@+id/btnOpSum"
        style="@style/Button"
        android:text="+" />

</LinearLayout>